<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.searly.taxcontrol</groupId>
  <artifactId>tax-dack</artifactId>
  <name>tax-dack</name>
  <version>1.0.3</version>
  <url>http://maven.apache.org</url>
  <scm>
    <connection>scm:git:https://gitlab.s-early.com/lean/tax-dack.git</connection>
    <developerConnection>scm:git:https://gitlab.s-early.com/lean/tax-dack.git</developerConnection>
    <tag>release-1.31.x</tag>
    <url>https://gitlab.s-early.com/lean/tax-dack.git</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.searly.taxcontrol.verifactu.demo.Demo</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases />
      <snapshots />
      <id>heading</id>
      <name>Heading Repository</name>
      <url>http://hdxmservice.asuscomm.com:8036/repository/maven-snapshots</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.chilkatsoft</groupId>
      <artifactId>chilkat</artifactId>
      <version>local</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/chilkat-jdk11-x64/chilkat.jar</systemPath>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>releases</id>
      <url>http://hdxmservice.asuscomm.com:8036/repository/maven-releases</url>
    </repository>
    <snapshotRepository>
      <id>snapshots</id>
      <url>http://hdxmservice.asuscomm.com:8036/repository/maven-snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
